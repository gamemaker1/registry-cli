{
	"name": "registry-cli",
	"version": "0.4.0",
	"description": "A CLI to create and interact with Sunbird RC registry instances",
	"author": "Vedant K <https://github.com/gamemaker1>",
	"license": "MIT",
	"main": "source/main.ts",
	"type": "module",
	"bin": {
		"registry": "build/main.js"
	},
	"files": [
		"build",
		"source",
		"config",
		"pnpm-lock.yaml",
		"package.json"
	],
	"scripts": {
		"start": "TS_NODE_PROJECT=config/typescript.json node --no-warnings --loader ts-node/esm --es-module-specifier-resolution node source/main.ts",
		"build": "tsc -p config/typescript.json",
		"watch": "tsc -p config/typescript.json --watch",
		"test": "prettier --config config/prettier.json --ignore-path .gitignore --check .",
		"lint": "prettier --config config/prettier.json --ignore-path .gitignore --write ."
	},
	"dependencies": {
		"chalk": "^4.1.2",
		"command-exists": "^1.2.9",
		"commander": "^8.2.0",
		"docker-compose": "^0.23.13",
		"dockerode": "^3.3.1",
		"enquirer": "^2.3.6",
		"git-clone": "^0.2.0",
		"got": "^11.8.2",
		"ora": "^6.0.1",
		"replace-in-file": "^6.2.0"
	},
	"devDependencies": {
		"@types/command-exists": "^1.2.0",
		"@types/dockerode": "^3.3.0",
		"@types/node": "^16.11.0",
		"prettier": "^2.4.1",
		"ts-node": "^10.3.0",
		"typescript": "^4.4.4"
	}
}
